<UserControl x:Class="TheWitcher.View.CharacterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheWitcher.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Image Source="{Binding ImageURL}" />
        <Label Content="{Binding Name}" />
        <Label Content="{Binding Sex}" />
        <Label Content="{Binding Race}" />
        <Label Content="{Binding BelongTo}" />
        <Label Content="{Binding Occupation}" />
    </StackPanel>
</UserControl>
