<Window x:Class="TheWitcherManager.View.WitcherManagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheWitcherManager.View"
        mc:Ignorable="d"
        Title="The Witcher. God mode" Height="650" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label  FontFamily="./#Mason Chronicles" 
            FontSize="16" Content="Персонажи" />
        <ListBox ItemsSource="{Binding Characters}" SelectedItem="{Binding SelectedCharacter}"  FontFamily="./#Mason Chronicles" FontSize="16">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button  FontFamily="./#Mason Chronicles" FontSize="16" Content="Add new" Click="AddBtn_Click" />
        <Button  FontFamily="./#Mason Chronicles" FontSize="16" Content="Edit" Click="EditBtn_Click" />
        <Button  FontFamily="./#Mason Chronicles" FontSize="16" Content="Delete" Command="{Binding DeleteCmd}" />
    </StackPanel>
</Window>
